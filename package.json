{
  "name": "theholgaproject",
  "version": "4.0.0",
  "description": "Drag & drop an image into your browser and apply a Holga-like filter.",
  "main": "src/js/index.js",
  "config": {
    "dir": "local"
  },
  "scripts": {
    "copy": "./bin/copy-files.sh",
    "dev:js": "webpack",
    "dev:css": "postcss src/css/main.css -o local/css/bundle.css",
    "watch": "nodemon -e css,js,html -x \"npm run dev:js && npm run dev:css\"",
    "serve": "http-server -p 9090 local/ -c-1",
    "timestamp-bundles": "node bin/timestamp-bundles.js",
    "prestart": "npm run copy -- local",
    "start": "npm run dev:js && npm run dev:css && npm run watch & npm run serve"
  },
  "repository": "https://github.com/jonchretien/theholgaproject",
  "author": "Jon Chretien",
  "license": "",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "cssnano": "^4.0.4",
    "http-server": "^0.11.1",
    "nodemon": "^1.17.5",
    "postcss-cli": "^6.0.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  }
}
